<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/app_bar_main"
    tools:context="com.example.administrator.reparihelper_spacpe.activity.MainActivity">



    <LinearLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_above="@+id/rg"
        android:id="@+id/f_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    </LinearLayout>


    <RadioGroup
        android:id="@+id/rg"
        android:background="#3340FF"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true">

        <RadioButton
            android:onClick="r1"
            android:button="@null"
            android:text="技术中心"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/radio1"
            android:textColor="#ffffff"
            android:layout_width="0dp"
            android:background="@drawable/radio_button_seletor"
            android:layout_height="wrap_content"
            android:id="@+id/comm_radio" />

        <RadioButton
            android:onClick="r2"
            android:button="@null"
            android:text="汽车资讯"
            android:background="@drawable/radio_button_seletor"
            android:gravity="center"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/radio2"
            android:textColor="#ffffff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/news_radio" />

        <RadioButton
            android:onClick="r3"
            android:button="@null"
            android:text="维修大道"
            android:background="@drawable/radio_button_seletor"
            android:layout_weight="1"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/radio3"
            android:textColor="#ffffff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/repair_radio" />


    </RadioGroup>



</RelativeLayout>
